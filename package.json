{
  "name": "onebtc.relayer-client",
  "version": "0.0.1",
  "description": "Node.js appengine for staking dashboard",
  "private": true,
  "main": "src/server.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "start:watch": "tsc -w & nodemon -q -w ./dist ./dist/server.js",
    "start:prod": "node ./dist/server.js",
    "start:mainnet": "NODE_ENV=mainnet node ./dist/server.js",
    "build": "rm -rf ./dist && tsc",
    "test": "jest --forceExit",
    "path": "tspath",
    "prepublishOnly": "npm version patch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.spec.(ts|js)",
      "**/test/**/*.e2e.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@harmony-js/crypto": "^0.1.56",
    "@openzeppelin/contracts": "^3.2.0",
    "@sentry/node": "^5.25.0",
    "@summa-tx/bitcoin-spv-js-clients": "^0.1.4",
    "autobind-decorator": "^2.4.0",
    "aws-sdk": "^2.767.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.0.1",
    "bitcoinjs-lib": "^5.2.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "eth-ens-namehash": "^2.0.8",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "inquirer": "^8.2.0",
    "keccak256": "^1.0.3",
    "lodash": "^4.17.20",
    "lodash.get": "^4.4.2",
    "moment": "^2.29.0",
    "mongodb": "^4.1.2",
    "request": "^2.88.2",
    "tiny-secp256k1": "^1.1.6",
    "web3": "^1.3.0",
    "zerg": "^2.1.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "ava": "^3.13.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "express-http-proxy": "^1.6.3",
    "jest": "^26.5.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "semistandard": "^14.2.3",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
